<?xml version="1.0"?>
<tool id="GFFGenbankMere" name="Merge GFF output into Genbank" version="1.94">
  <description>given the gff output of a tool, the fasta input into that tool, and the original genbank file, this tool merges all three into a final genbank file</description>
  <version_command>perl bin/cpt_gfffasta_genbank_merge.pl --version</version_command>
  <stdio>
    <exit_code range="1:" level="fatal"/>
  </stdio>
  <command interpreter="perl">bin/cpt_gfffasta_genbank_merge.pl
--galaxy
--outfile_supporting $__new_file_path__
--file_fasta "${file_fasta}"

--file_gff "${file_gff}"

--file_gbk "${file_gbk}"

#if $flatten_annotations:
--flatten_annotations
#end if

--genbank "${genbank}"

--genbank_files_path "${genbank.files_path}"

--genbank_format "${genbank_format}"

--genbank_id "${genbank.id}"

</command>
  <inputs>
    <param format="fasta" name="file_fasta" help="Fasta file that was used in the GFF producing tool" optional="False" label="file_fasta" type="data"/>
    <param name="file_gff" help="GFF Output of tool" optional="False" label="file_gff" type="data"/>
    <param name="file_gbk" help="Genbank file from which sequences were exported originally" optional="False" label="file_gbk" type="data"/>
    <param name="flatten_annotations" falsevalue="False" optional="True" truevalue="True" checked="" help="For hits which match to a feature, should their annotations be merged down into the parent feature's annotation? If this option is NOT set, then new features will be created for each of the hits" type="boolean" label="flatten_annotations"/>
    <param name="genbank_format" help="Merged Genbank File" optional="False" label="Format of genbank" type="select">
      <option value="Genbank" selected="True">Genbank</option>
    </param>
  </inputs>
  <outputs>
    <data name="genbank" format="Genbank">
      <change_format>
        <when input="genbank_format" value="Genbank" format="txt"/>
      </change_format>
    </data>
  </outputs>
  <help>DESCRIPTION
===========

</help>
  <tests>
    <test>
      <param name="file_fasta" value="test-data/inputs/inputfa_for_gff3.fa"/>
      <param name="file_gbk" value="test-data/inputs/multi.gbk"/>
      <param name="file_gff" value="test-data/inputs/example.gff3"/>
      <param name="flatten_annotations" value=""/>
      <param name="genbank" value="test-data/outputs/gff_fasta_gbk_merge.gbk"/>
    </test>
  </tests>
</tool>
