<?xml version="1.0"?>
<tool id="SarFinder" name="Sar Finder" version="1.96">
  <description>Attempts to locate SAR domains according to sequence rules</description>
  <version_command>perl bin/cpt_sar_finder.pl --version</version_command>
  <stdio>
    <exit_code range="1:" level="fatal"/>
  </stdio>
  <command interpreter="perl">bin/cpt_sar_finder.pl
--galaxy
--outfile_supporting $__new_file_path__
--file "${file}"

--min_gene "${min_gene}"

--fasta "${fasta}"

--fasta_files_path "${fasta.files_path}"

--fasta_format "${fasta_format}"

--fasta_id "${fasta.id}"

</command>
  <inputs>
    <param name="file" help="Input file" optional="False" label="file" type="data"/>
    <param value="30" name="min_gene" help="Minimum gene length for ORF finding step" optional="False" label="min_gene" type="integer"/>
    <param name="fasta_format" help="Found ORFs" optional="False" label="Format of fasta" type="select">
      <option value="Fasta" selected="True">Fasta</option>
    </param>
  </inputs>
  <outputs>
    <data name="fasta" format="Fasta">
      <change_format>
        <when input="fasta_format" value="Fasta" format="fasta"/>
      </change_format>
    </data>
  </outputs>
  <help>DESCRIPTION
===========

Runs the CPT's SAR finder to locate possible SAR domains
</help>
  <tests/>
</tool>
