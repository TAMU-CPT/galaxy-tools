<?xml version="1.0"?>
<tool id="CHAPLIN_search_by_feature_tag" name="Search by Feature Tag" version="0.0.1">
  <description>lists features in a database resulting from a given search</description>
  <version_command>perl bin/chaplin-find-and-replace-tags.pl --version</version_command>
  <stdio>
    <exit_code range="1:" level="fatal"/>
  </stdio>
  <command interpreter="perl">bin/chaplin-find-and-replace-tags.pl
--galaxy
--outfile_supporting $__new_file_path__
--database "${database}"

--query "${query}"

--pcre_regex_from "${pcre_regex_from}"

--pcre_regex_to "${pcre_regex_to}"

#if $noop:
--noop
#end if

--results "${results}"

--results_files_path "${results.files_path}"

--results_format "${results_format}"

--results_id "${results.id}"

</command>
  <inputs>
    <param name="database" help="Database Name" optional="False" label="database" type="text"/>
    <param name="query" help="SQL Query String used to select rows for doing replacement on (* is wildcard character)" optional="False" label="query" type="text"/>
    <param name="pcre_regex_from" help="Regular expression used to match the target string inside the querried data. E.g., a value of &quot;abc&quot; would constitute part of the complete regex s/abc/???/g" optional="False" label="pcre_regex_from" type="text"/>
    <param name="pcre_regex_to" help="Portion of the regular expression representing the text replacement. E.g., a value of &quot;def&quot; would constitute part of the complete regex s/???/def/g" optional="False" label="pcre_regex_to" type="text"/>
    <param name="noop" falsevalue="False" optional="True" truevalue="True" checked="" help="Dry-run/No-op: no database modifications are made" type="boolean" label="noop"/>
    <param name="results_format" help="Find and Replace Results" optional="False" label="Format of results" type="select">
      <option value="CSV" selected="True">CSV</option>
      <option value="CSV_U">CSV_U</option>
      <option value="Dumper">Dumper</option>
      <option value="JSON">JSON</option>
      <option value="ODS">ODS</option>
      <option value="TSV">TSV</option>
      <option value="TSV_U">TSV_U</option>
      <option value="XLS">XLS</option>
      <option value="XLSX">XLSX</option>
      <option value="YAML">YAML</option>
    </param>
  </inputs>
  <outputs>
    <data name="results" format="CSV">
      <change_format>
        <when input="results_format" value="CSV" format="tabular"/>
        <when input="results_format" value="CSV_U" format="tabular"/>
        <when input="results_format" value="Dumper" format="txt"/>
        <when input="results_format" value="JSON" format="txt"/>
        <when input="results_format" value="ODS" format="data"/>
        <when input="results_format" value="TSV" format="tabular"/>
        <when input="results_format" value="TSV_U" format="tabular"/>
        <when input="results_format" value="XLS" format="data"/>
        <when input="results_format" value="XLSX" format="data"/>
        <when input="results_format" value="YAML" format="txt"/>
      </change_format>
    </data>
  </outputs>
  <help>
</help>
  <tests/>
</tool>
