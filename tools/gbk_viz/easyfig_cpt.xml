<?xml version="1.0"?>
<tool id="edu.tamu.cpt2.gbk_viz.easyfig" name="Output Gbk Visualization" version="1.0">
  <description>Prototype - Not Yet for General Use: Easyfig toole wrapper for galaxy</description>
  <macros>
    <import>macros.xml</import>
    <import>cpt-macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="aggressive"><![CDATA[
python $__tool_directory__/easyfig_cpt.py
"$gbkIn"
-o "$SVG_Out"
]]></command>
  <inputs>
    <param label="GFF3" name="gff3In" type="data" multiple="true" format="gff3"/>
  </inputs>
  <outputs>
        <data name="SVG_Out" format="svg" label="SVG Output"/>
  </outputs>
  <help><![CDATA[
**What it does**
Paste from tool --help
      ]]></help>
  <expand macro="citations" />
</tool>
